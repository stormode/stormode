        "@types/node": "^22.7.5",
        "jest": "^29.7.0",
        "npm-run-all": "^4.1.5",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsup": "^8.3.0",
        "typescript": "^5.6.3"
    }
